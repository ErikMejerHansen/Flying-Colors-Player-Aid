<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/section_divider_left_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_weight="0.33"
        android:background="@drawable/divider_left"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
         />

    <ImageView
        android:id="@+id/section_divider_right_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="0.33"
        android:background="@drawable/divider_right"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />
    
    <TextView
        style="@style/divider_text"
        android:id="@+id/section_divider_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    	android:layout_toRightOf="@id/section_divider_left_image"
    	android:layout_toLeftOf="@id/section_divider_right_image"    
       />

    

</merge>